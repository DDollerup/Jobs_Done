
@{
    Layout = null;
}

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Case</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/Home/AddCase" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6"><label class="col-form-label">Title</label></div>
                        <div class="col-md-6"><input type="text" name="Title" class="form-control" /></div>

                        <div class="col-md-6"><label class="col-form-label">Start Date</label></div>
                        <div class="col-md-6"><input type="date" name="StartDate" class="form-control" /></div>

                        <div class="col-md-6"><label class="col-form-label">End Date</label></div>
                        <div class="col-md-6"><input type="date" name="EndDate" class="form-control" /></div>

                        <div class="col-md-6"><label class="col-form-label">Email</label></div>
                        <div class="col-md-6"><input type="email" class="form-control" name="Email" /></div>

                        <div class="col-md-6"><label class="col-form-label">Phone</label></div>
                        <div class="col-md-6"><input type="text" class="form-control" name="Phone" /></div>

                        <div class="col-md-6"><label class="col-form-label">Remarks</label></div>
                        <div class="col-md-6"><input type="text" class="form-control" name="Remarks" /></div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>